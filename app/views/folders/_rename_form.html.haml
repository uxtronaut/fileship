= simple_form_for [folder], :html => {:class => 'form-horizontal'} do |form|

  = form.error_notification

  = form.input :name, :input_html => {:class => 'span3'}, :hint => t('simple_form.hints.folder.edit.name'), :label => t('simple_form.labels.folder.edit.name')

  - unless defined?(no_buttons) && no_buttons
    .form-actions
      = form.submit 'Rename Folder', :class => 'btn btn-primary'