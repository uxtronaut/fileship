%h2 Download File
%h3= @user_file.name

= simple_form_for @user_file, :url => check_password_user_file_path(@user_file), :html => {:class => 'form-horizontal'} do |form|

  = form.error_notification

  = form.input :password, :input_html => {:value => nil}

  .form-actions
    = form.submit 'Download File', :class => 'btn btn-primary'